<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:minHeight="72dp">

        <!-- File Icon -->
        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_category_documents"
            app:tint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- File Name -->
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Document.pdf"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/iv_file_icon"
            app:layout_constraintStart_toEndOf="@+id/iv_file_icon"
            app:layout_constraintEnd_toStartOf="@+id/layout_size_container" />

        <!-- File Details -->
        <TextView
            android:id="@+id/tv_file_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Modified: Dec 12, 2023"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_name"
            app:layout_constraintStart_toEndOf="@+id/iv_file_icon"
            app:layout_constraintEnd_toStartOf="@+id/layout_size_container" />

        <!-- File Size and Progress Container -->
        <LinearLayout
            android:id="@+id/layout_size_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/iv_file_icon"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_select">

            <!-- File Size -->
            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 MB"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:textStyle="normal" />

            <!-- Progress Bar (for calculating folder sizes) -->
            <ProgressBar
                android:id="@+id/pb_calculating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Selection Checkbox (hidden by default) -->
        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/iv_file_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_file_icon"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>