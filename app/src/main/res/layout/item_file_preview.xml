<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginEnd="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- File Icon Background -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_preview_background"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/categoryImages"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- File Icon -->
    <ImageView
        android:id="@+id/iv_preview_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_image"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/iv_preview_background"
        app:layout_constraintEnd_toEndOf="@+id/iv_preview_background"
        app:layout_constraintTop_toTopOf="@+id/iv_preview_background"
        app:layout_constraintBottom_toBottomOf="@+id/iv_preview_background" />

    <!-- File Size -->
    <TextView
        android:id="@+id/tv_preview_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.5 MB"
        android:textColor="@color/textColorSecondary"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_preview_background" />

</androidx.constraintlayout.widget.ConstraintLayout>